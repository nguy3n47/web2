<section class="section-content">
  <div class="container">
    <div
      class="card mx-auto"
      style="max-width: 400px; margin-top: 20px; margin-bottom: 20px"
    >
      <div class="card-body">
        <h4 class="card-title mb-4 text-center">
          Sent! Verify your email address
        </h4>
        <form method="POST">
          <p class="text-center">
            We have sent an email with PIN code to <%= email %>
          </p>
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="fa fa-lock form-control"></i>
                </span>
              </div>
              <input
                name="code"
                class="form-control"
                placeholder="Code"
                style="margin-left: 5px"
                type="text"
                onkeypress="validate(event)"
                maxlength="6"
              />
            </div>
            <!-- input-group.// -->
          </div>
          <!-- form-group// -->
          <div class="form-group">
            <button
              type="submit"
              style="margin-top: 10px"
              class="btn btn-primary form-control btn-block"
            >
              Continue
            </button>
          </div>
          <!-- form-group// -->
        </form>
      </div>
      <!-- card-body.// -->
    </div>
  </div>
  <!-- container // -->
</section>
