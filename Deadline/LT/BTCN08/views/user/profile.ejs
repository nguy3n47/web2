<section class="section-content">
  <div class="container">
    <div class="card mx-auto" style="max-width: 550px; margin-top: 20px">
      <div class="card-body">
        <h4 class="card-title mb-4 text-center">Profile</h4>
        <form method="POST" enctype="multipart/form-data">
          <div class="form-group text-center">
            <img
              width="240px"
              height="240px"
              style="object-fit: cover"
              id="profileImg"
              src="/assets/images/<%- currentUser.avatar%>"
              class="img-sm rounded-circle border"
            />
            <label for="file-input">
              <i
                style="
                  font-size: 28px;
                  position: absolute;
                  top: 55%;
                  left: 50%;
                  transform: translate(-50%, -50%);
                  color: gray;
                "
                class="fas fa-camera"
              ></i>
            </label>
            <input
              id="file-input"
              name="avatar"
              style="display: none"
              type="file"
            />
          </div>
          <% if (success) { %>
          <div class="alert alert-success mt-3" role="alert">
            Cập nhật thành công!
          </div>
          <% } %>
          <div class="form-row" style="margin-top: 30px">
            <div class="col form-group">
              <label>Name</label>
              <input
                name="name"
                required
                type="text"
                class="form-control"
                value="<%- currentUser.name%>"
              />
            </div>
            <!-- form-group end.// -->
            <div class="col form-group">
              <label>Email</label>
              <input
                name="email"
                required
                type="email"
                class="form-control"
                value="<%- currentUser.email%>"
              />
            </div>

            <div class="col form-group">
              <label>Phone</label>
              <input
                name="phone"
                required
                type="text"
                class="form-control"
                value="<%- currentUser.phone%>"
                maxlength="10"
                onkeypress="validate(event)"
              />
            </div>
            <!-- form-group end.// -->
          </div>
          <button
            type="submit"
            style="margin-top: 10px"
            class="btn btn-primary btn-block form-control"
          >
            Save
          </button>
        </form>
      </div>
      <!-- card-body.// -->
    </div>
  </div>
  <!-- container // -->
</section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
<script>
  $("#file-input").change(function () {
    readURL(this, "profileImg");
  });
  function readURL(input, id) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();
      reader.onload = function (e) {
        $("#" + id).attr("src", e.target.result);
      };
      reader.readAsDataURL(input.files[0]);
    }
  }
</script>
